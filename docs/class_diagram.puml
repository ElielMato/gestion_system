@startuml ClassDiagram

class Article {
    - name: str
    - description: str 
    - category: Category
    - brand: Brand
}

class Category {
    - name: str
    - description: str
}

class Brand {
    - name: str
    - description: str
}

class Stock {
    - items: ReceiptItem
}

class ReceiptType {
    - name: str
    - description: str
    - type: int // 1: In, 2: Transfer, -1 Out
}

class ReceiptHeader {
    - submission_date: datetime
    - type: ReceiptType
}

class ReceiptItem {
    - article: Article
    - quantity: float
}

class ReceiptFooter {
    - total: float
}

class Receipt {
    - header: ReceiptHeader
    - items: ReceiptItem
    - footer: ReceiptFooter
}

Stock --> Article
Brand --> Article
Category --> Article

Stock --> ReceiptItem

ReceiptHeader --> Receipt
ReceiptItem --> Receipt
ReceiptFooter --> Receipt

Receipt --> ReceiptType

@enduml